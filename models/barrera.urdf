<?xml version="1.0"?>

<robot name="barrera">

    <material name="blue">
        <color rgba="0 0 0.8 1" />
    </material>

    <material name="red">
        <color rgba="1 0 0 1" />
    </material>

    <link name="base_body">

        <inertial>
            <origin xyz="0 0 0.1" />
            <mass value="1000000.0" />
            <inertia ixx="1.0" ixy="0.0" ixz="0.0"
            iyy="1.0" iyz="0.0" izz="1.0" />

        </inertial>
        <visual>        
            <origin xyz="0 0 0.4" />
            <geometry>
                <cylinder length="0.8" radius="0.1"/>
            </geometry>
            <material name="red"/>
        </visual>

        <collision>
            <origin xyz="0 0 0.4" />
            <geometry>
                <cylinder length="0.8" radius="0.1"/>
            </geometry>
        </collision>

    </link>

    <link name="arm_link">

        <inertial>
            <origin rpy="0 0 0" xyz="0 0.3 0.8" />
            <mass value="5.0" />
            <inertia ixx="0.0" ixy="0.0" ixz="0.0"
            iyy="0.0" iyz="0.0" izz="0.0" />

        </inertial>
        <visual>        
            <origin rpy="0 0 0" xyz="0.0 -1 0.2" />
            <geometry>
                <box size="0.1 2.3 0.1" />
            </geometry>
            <material name="red"/>
        </visual>

        <collision>
            <origin rpy="0 0 0" xyz="0.0 -1 0.2" />
            <geometry>
                <box size="0.1 2.3 0.1" />
            </geometry>
        </collision>

    </link>

    <joint name="body_to_arm" type="continuous">
        <parent link="base_body" />
        <child link="arm_link" />
        <dynamics damping="0.0" friction="0.0" />
        <origin xyz="0.0 0 0.2" />
        <axis xyz="0 0 1" />
    </joint>
</robot>